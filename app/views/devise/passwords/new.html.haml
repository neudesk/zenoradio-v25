#authentication-form
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.input :email, input_html: { class: 'authentication-input'}, label_html: { class: 'authentication-label'}
    .submit-control
      = f.submit "Send me reset password instructions", class: "submit-btn"
    = render "devise/shared/links"
