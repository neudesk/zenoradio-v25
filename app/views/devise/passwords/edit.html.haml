#authentication-form
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    = f.input :password, label: "New password", input_html: { class: 'authentication-input', :autofocus => true}, label_html: { class: 'authentication-label'}
    = f.input :password_confirmation, label: "Confirm new password", input_html: { class: 'authentication-input'}, label_html: { class: 'authentication-label'}
    .submit-control
      = f.submit "Change my password", class: "submit-btn"
  = render "devise/shared/links"
